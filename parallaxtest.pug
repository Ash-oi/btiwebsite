      #group4.parallax__group
        .parallax__layer.background-options.parallax__layer--back
          .right-container
            .heading.grey-text Join the Community
            p.content.grey-text To the left you’ll find our social media links, where you can connect & engage with BTI tutors, alumni, industry experts and interested indivuduals. It’s where we come together to discuss the blockchain, crypto, current affairs & more.
      #group5.parallax__group
        .parallax__layer.background-options.parallax__layer--base
          .left-container
            .heading our courses
            p.content Our courses and workshops are spread into four primary categories:
            ul
              li.content Non-Technical
              li.content Technical
              li.content Research and Valuation (Token Economics / Investment)
              li.content Corporate workshops
            p.content Courses and workshops are run throughout year in Australia & NZ. Further information and workshop dates can be found here:
            button.orange-button course dates            
      #group6.parallax__group
        .parallax__layer.background-options.parallax__layer--back
          .centre-container.thinner
            .heading mailing list
            p.content Like you, we hate spam, so our mailing list exists for 2 only reasons:
            ul
              li.content To notify you when new workshop dates are announced 
              li.content We send out our monthly “State of the blockchain industry” which includes a recap of the months major events along with further reading.
            input.email-input(type="email" placeholder="EMAIL*")
            button.orange-button join
            p.content.bold.centre-text or
            button.orange-button contact us
  script.
    const screenHeight = window.innerHeight
        || document.documentElement.clientHeight
        || document.body.clientHeight;

    const navBubbles = [
      document.getElementById("first"),
      document.getElementById("second"),
      document.getElementById("third"),
      document.getElementById("fourth"),
      document.getElementById("fifth"),
      document.getElementById("sixth"),
    ];
    
    removeFill = (except) => {
      for(let bubble in navBubbles){
        if(bubble !== except){
          navBubbles[bubble].classList.remove("filled");
        }
      }
    }

    parallaxScrolled = (element) => {
      const currentScroll = element.scrollTop + screenHeight / 2;      
      //- theres no way this is efficient

      switch (true) {
        case(currentScroll <= screenHeight):
          removeFill(0)
          navBubbles[0].classList.add("filled");
          break;
        case(currentScroll <= screenHeight * 2):
          removeFill(1)
          navBubbles[1].classList.add("filled");
          break;
        case(currentScroll <= screenHeight * 3):
          removeFill(2)
          navBubbles[2].classList.add("filled");
          break;
        case(currentScroll <= screenHeight * 4):
          removeFill(3)
          navBubbles[3].classList.add("filled");
          break;
        case(currentScroll <= screenHeight * 5):
          removeFill(4)
          navBubbles[4].classList.add("filled");
          break;
        case(currentScroll <= screenHeight * 6):
          removeFill(5)
          navBubbles[5].classList.add("filled");
          break;
      }
    };
      
      